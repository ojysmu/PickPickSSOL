<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_stack_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:layout_marginStart="@dimen/card_horizontal_margin"
    android:outlineProvider="bounds"
    android:elevation="4dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeWidth="4dp"
    app:strokeColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <TextView
        android:id="@+id/card_main_stack_content_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/card_vertical_margin"
        android:layout_marginHorizontal="@dimen/card_horizontal_margin"
        android:text="abababababababababab"
        android:textSize="@dimen/text_large4"
        android:textColor="@android:color/white"
        android:shadowColor="@color/card_background_gray"
        android:shadowRadius="4"
        android:shadowDx="1"
        android:shadowDy="1"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:includeFontPadding="false"/>
</com.google.android.material.card.MaterialCardView>